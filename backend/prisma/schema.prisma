// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  last_name String
  email     String @unique
  cnpj_cpf  Int    @unique

  password String

  address_id             Int
  contact_information_id Int      @unique
  created_at             DateTime @default(now())

  @@map("users")
}
